@using WebPresentation.Models;
@model EmployeeFullViewModel
@{
    ViewData["Title"] = "Деталі працівника";
    // Формуємо ПІБ правильно: Прізвище Ім'я По-батькові
    var fullName = $"{Model.LastName} {Model.FirstName}";
    if (!string.IsNullOrWhiteSpace(Model.MiddleName))
    {
        fullName += $" {Model.MiddleName}";
    }
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-person-badge"></i> Деталі працівника
    </h2>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0 text-white">@fullName</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 col-lg-3 fw-bold text-muted">ПІБ</dt>
                <dd class="col-sm-8 col-lg-9">@fullName</dd>

                <dt class="col-sm-4 col-lg-3 fw-bold text-muted">Відділ</dt>
                <dd class="col-sm-8 col-lg-9">
                    <span class="badge bg-info text-dark">@Model.Department</span>
                </dd>

                <dt class="col-sm-4 col-lg-3 fw-bold text-muted">Посада</dt>
                <dd class="col-sm-8 col-lg-9">
                    <span class="badge bg-success">@Model.Position</span>
                </dd>

                <dt class="col-sm-4 col-lg-3 fw-bold text-muted">Дата прийому на роботу</dt>
                <dd class="col-sm-8 col-lg-9">@Model.HireDate</dd>

                <dt class="col-sm-4 col-lg-3 fw-bold text-muted">Оклад</dt>
                <dd class="col-sm-8 col-lg-9">
                    <strong class="text-success">@Model.Salary ₴</strong>
                </dd>

                <dt class="col-sm-4 col-lg-3 fw-bold text-muted">Дата народження</dt>
                <dd class="col-sm-8 col-lg-9">@Model.BirthDate</dd>

                <dt class="col-sm-4 col-lg-3 fw-bold text-muted">Адреса</dt>
                <dd class="col-sm-8 col-lg-9">@(string.IsNullOrWhiteSpace(Model.Address) ? "—" : Model.Address)</dd>

                <dt class="col-sm-4 col-lg-3 fw-bold text-muted">Телефон</dt>
                <dd class="col-sm-8 col-lg-9">
                    @if (!string.IsNullOrWhiteSpace(Model.PhoneNumber))
                    {
                        <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </dd>

                <dt class="col-sm-4 col-lg-3 fw-bold text-muted">Email</dt>
                <dd class="col-sm-8 col-lg-9">
                    @if (!string.IsNullOrWhiteSpace(Model.Email))
                    {
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer bg-light">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Редагувати
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"
               onclick="return confirm('Впевнені, що хочете видалити?')">Видалити</a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Назад до списку
            </a>
        </div>
    </div>
</div>